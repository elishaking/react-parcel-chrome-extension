{
  "manifest_version": 2,

  "name": "Basic Chrome Extension",
  "description": "Chrome Extension built with React/Parcel",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "src/popup.html"
  },

  "permissions": ["activeTab", "tabs"],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["build/main.js"]
    }
  ]
}
